<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="50dp" android:orientation="horizontal">
    <TextView
        android:id="@+id/time"
        android:textColor="@color/receive_color"
        android:layout_gravity="end"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="time goes here"
        android:textSize="11sp"
        android:layout_weight="2"

        />

    <TextView
        android:id="@+id/message"
        android:textColor="@color/receive_color"
        android:layout_marginTop="10dp"
        android:textAlignment="textEnd"
        android:layout_marginHorizontal="3dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_goes_here1"
        android:layout_weight="1"
        />

    <ImageView
        android:src="@drawable/dog"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</LinearLayout>