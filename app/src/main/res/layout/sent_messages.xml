<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="50dp" android:orientation="horizontal">
    <ImageView
        android:id="@+id/img"
        android:src="@drawable/amazing"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <TextView
        android:id="@+id/message"
        android:textColor="@color/send_color"
        android:textAlignment="textStart"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="3dp"
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_goes_here"
        />

    <TextView
        android:layout_gravity="start"
        android:id="@+id/time"
        android:textColor="@color/send_color"
        android:textAlignment="textStart"
        android:textSize="11sp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time_goes_here"/>
</LinearLayout>